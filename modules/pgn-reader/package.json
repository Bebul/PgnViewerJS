{
  "name": "@mliebelt/pgn-reader",
  "description": "A pgn reader (backend only) to read, understand and play chess games. Used mainly by pgn-viewer.",
  "version": "1.2.11",
  "main": "lib/pgn.js",
  "files": [
    "README.md",
    "LICENSE.md"
  ],
  "module": "modules/pgn-reaeder/src/pgn.js",
  "author": "mliebelt",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/mliebelt/PgnViewerJS.git"
  },
  "scripts": {
    "build": "npm run mjs && npm run cjs && npm run umd && npm run wp",
    "mjs": "tsc -d && mv lib/pgn.js lib/pgn.mjs && mv lib/types.js lib/types.mjs",
    "cjs": "tsc -m commonjs",
    "umd": "rollup -i lib/index.mjs -o lib/index.umd.js -f umd -n index",
    "wp": "../../node_modules/.bin/webpack --config webpack.prod.js",
    "start": "../../node_modules/.bin/webpack-dev-server --open --config webpack.dev.js",
    "test": "cd ../../ && ./node_modules/.bin/mocha ./modules/pgn-reader/test/*.js",
    "test-interactive": "cd ../../ && ./node_modules/.bin/mocha -w  ./modules/pgn-reader/test/*.js",
    "prepare": "npm run build"
  },
  "devDependencies": {
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.8",
    "mocha": "^9.1.3",
    "should": "^13.2.3",
    "rollup": "^2.59.0",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@mliebelt/pgn-parser": "^1.4.1",
    "chess.js": "^0.10.3"
  }
}
