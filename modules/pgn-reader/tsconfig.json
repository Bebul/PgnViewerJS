{
  "compilerOptions": {
    "target": "ES2017",
    "outDir": "lib",
    "declaration": true,
    "declarationMap": true,
    "lib": ["es2015", "DOM"],
    "module": "umd",
    "allowJs": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node"
  },
  "include": ["src"]
}