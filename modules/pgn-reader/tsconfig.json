{
  "compilerOptions": {
    "target": "ES6",
    "outDir": "lib",
    "declaration": true,
    "declarationMap": true,
    "module": "CommonJS",
    "allowJs": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": false,
    "moduleResolution": "Node"
  },
  "include": ["src"]
}